<div class='container'>
   <% if current_user %>
  <h3 class='pull-right '>Organization: <%= @tenant.name %></h3>
  <%= render 'projects/list' %>
  <% else %>
   <div class='jumbotron container center'>
       <h2>Welcome to the Project Management App</h2>
       <div class='center'> 
           <p class='lead'>
           Make your project easy to manage with this SaaS application.
       </p>
       <h4>2 plans to accomodate your needs:</h4>
       </div>
   </div>
   <div class='container row'>
       <div class='plans clearfix'>
           <div class='col-lg-3 col-lg-offset-3 plan'>
               <h2>Free Plan</h2>
               <div class='price pull-right'>
                   Price: Free
               </div>
               <div class='features'>
                   <ul>
                       <li>Unlimited File Uploads</li>
                       <li>Responsive Design</li>
                       <li>Access Anywhere</li>
                       <li>1 Project</li>
                   </ul>
               </div>
               <p>
                   <%=link_to 'Sign Up', new_user_registration_path(plan:'free'), class: 'btn btn-primary sign-up' %>
               </p>
           </div>
           <div class='col-lg-3  plan'>
               <h2>Premium Plan</h2>
               <div class='price pull-right'>
                   Price: $10
               </div>
               <div class='features'>
                   <ul>
                       <li>Unlimited File Uploads</li>
                       <li>Responsive Design</li>
                       <li>Access Anywhere</li>
                       <li class='extra'>Unlimited Projects</li>
                   </ul>
               </div>
               <p>
                   <%=link_to 'Sign Up', new_user_registration_path(plan:'premium'), class: 'btn btn-primary sign-up' %>
               </p>
           </div>
       </div>
   </div>
   <% end %>
</div>


